@using dnorwoodblog.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<style>
        /*input{
            width: 50%;
        }*/

        /*form {
            border: 3px solid #f1f1f1;
        }*/

        button:hover {
            opacity: 0.8;
        }

        .imgcontainer {
            text-align: center;
            margin: 24px 0 12px 0;
        }

        img.avatar {
            width: 40%;
            border-radius: 50%;
        }

        /*.container {
            padding: 16px 75px;
        }*/


